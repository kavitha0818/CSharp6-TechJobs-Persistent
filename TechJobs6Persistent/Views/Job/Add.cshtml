@model TechJobs6Persistent.ViewModels.AddJobViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

<h1>Add Job</h1>

<form asp-controller="Job" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EmployerId">Employer</label>
        <select asp-for="EmployerId" class="form-control">
            <option value="">-- Select Employer --</option>
            @foreach (var employer in Model.Employers)
            {
                <option value="@employer.Value">@employer.Text</option>
            }
        </select>
        <span asp-validation-for="EmployerId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Add New Employer</label>
        <div>
            <a asp-controller="Employer" asp-action="Create" class="btn btn-link">Add New Employer</a>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Add Job</button>
</form>

