@model List<TechJobs6Persistent.Models.Employer>

<h1>Employers Currently Hiring</h1>

@if (Model.Count == 0)
{
    <p>No Employers have been listed yet!</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Employer</th>
        </tr>
         </thead> 
        @foreach (Employer employer in Model)
        {
            <tr>
                <td>@employer.Id</td>
                <td><a asp-controller="Employer" asp-action="About" asp-route-id="@employer.Id">@employer.Name</a></td>
            </tr>
         
        }
    </table>
}

<div>
    <a asp-controller="Employer" asp-action="Create" class="btn btn-primary" target="_blank">Add New Employer</a>
</div>
